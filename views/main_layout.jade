                    i.fa.fa-align-justify
              // /.navbar-header
              #navigation.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                  block main_menu

      #heading-breadcrumbs
        .container
          .row
            .col-md-7
              h1
                block page_title
