                    span.hidden-xs.text-uppercase Entrar

        .navbar-affixed-top(data-spy='affix', data-offset-top='200')
          #navbar.navbar.navbar-default.yamm(role='navigation')
            .container
              .navbar-header
                a.navbar-brand.home(href='index.html')
                  img.hidden-xs.hidden-sm(src='/img/logo.png', alt='Universal logo')
                  img.visible-xs.visible-sm(src='/img/logo-small.png', alt='Universal logo')
                  span.sr-only Universal - go to homepage
                .navbar-buttons
                  button.navbar-toggle.btn-template-main(type='button', data-toggle='collapse', data-target='#navigation')
                    span.sr-only Toggle navigation
                    i.fa.fa-align-justify
              // /.navbar-header
              #navigation.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                  li
                    a(href='#') Home
                  li
                    a(href='#') Meus pedidos
                  li
                    a(href='#') Meu perfil

