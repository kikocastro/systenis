extends ../funcionario_layoutblock page_title  | Pedido número #{pedido.id}block main_content  .content    .container      .row        if !!funcionario          .col-md-12            p.text-muted.lead Funcionário de saída responsável: #{funcionario.nome} #{funcionario.sobrenome} (ID: #{funcionario.id})        #basket.col-md-8.clearfix          .box            .table-responsive              table.table                thead                  tr                    th ID                    th(colspan='2') Produto                    th Quantidade                    th Preço unitário cobrado                    th Total                tbody                  each item in pedido.itens                    tr                      td #{item.produto.id}                      td                        a(href='#')                          img(src=item.produto.imagem)                      td                        a(href='/produtos/' + item.produto.id)= item.produto.nome                      td                        | #{item.quantidade}                      td R$ #{item.preco_unitario}                      td R$ #{(item.preco_unitario * item.quantidade).toFixed(2)}                tfoot                  tr                    th(colspan='4') Total                    th(colspan='2') R$ #{pedido.valor_total}              .box-footer                .pull-left                  a.btn.btn-default(href='/intranet/pedidos')                    i.fa.fa-chevron-left                    |  Voltar para pedidos        .col-md-4          #order-summary.box            .box-header              h3 Pedido            .table-responsive              table.table                tbody                  if !!entrega                    if !!entrega.postado_em                      tr                        td Postado em                        th.postado_em #{entrega.postado_em}                    if !!entrega.entregue_em                      tr                        td Entregue em                        th.entregue_em #{entrega.entregue_em }                  tr                    td Status                    th.pedido-status #{pedido.status}                  tr                    td Atualizar Status                    th                      select#inputStatus.form-control(placeholder='Atualizar Status')                        option Selecione o status                        each status, key in statuses                          option(value=key) #{status}          if !!notaFiscal            .box              button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#notaFiscalModal')                | Abrir Nota Fiscal  #notaFiscalModal.modal.fade(tabindex='-1', role='dialog')    .modal-dialog(role='document')      .modal-content        .modal-header          button.close(type='button', data-dismiss='modal', aria-label='Close')            span(aria-hidden='true') ×          h4.modal-title Nota Fiscal        .modal-body          if !!notaFiscal            table.table              tbody                tr                  td Nome                  th #{notaFiscal.nome}                tr                  td cpf                  th #{notaFiscal.cpf}                tr                  td Data de Emissão                  th #{notaFiscal.emissao}                tr                  td Valor                  th R$ #{notaFiscal.valor}                tr                  td Descrição                  th #{notaFiscal.descricao}  script.    App.Funcionario.Pedido.show(!{JSON.stringify({pagamento: pagamento, pedido: pedido})});