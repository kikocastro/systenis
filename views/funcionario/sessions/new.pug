extends ../funcionario_layout

block page_title
  | Intranet

block main_content
  section
    .row
      if loginError
        .alert.alert-danger.alert-dismissible(role="alert")
          button.close(data-dismiss="alert" type="button")
            span(aria-hidden="true")  Ã—
            span.sr-only Fechar
          | #{loginError}
    .row.text-center
      .col-md-12
        .heading
          h2 Acesse sua conta
      .col-md-8.col-md-offset-2
        form(action="/funcionario/sessions/" method="POST")
          .row
            .col-sm-6.col-md-offset-3.text-left
              .form-group
                label(for='inputEmail') Email
                input#inputEmail.form-control(type='email', name="funcionario[email]", placeholder='Email', required)
            .col-sm-6.col-md-offset-3.text-left
              .form-group
                label(for='inputSenha') Senha
                input#inputSenha.form-control(type='password', name="funcionario[password]", placeholder='Senha', required)
            .col-sm-6.col-md-offset-3.text-right
              button.btn.btn-default(type='submit')
                |  Entrar
