extends ../../layout

block content
  h1.text-center Entrar
  .container
    form.form-horizontal(action="/cliente/sessions/" method="POST")
      .form-group
        label.col-sm-2.control-label(for='inputEmail') Email
        .col-sm-10
          input#inputEmail.form-control(type='email', name="cliente[email]", placeholder='Email')
      .form-group
        label.col-sm-2.control-label(for='inputPassword') Password
        .col-sm-10
          input#inputPassword.form-control(type='password', name="cliente[password]", placeholder='Senha')
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-default(type='submit') Entrar
